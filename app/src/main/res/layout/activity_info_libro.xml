<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".InfoLibro">

    <include layout="@layout/tool_bar" android:id="@+id/include" tools:layout_editor_absoluteY="-8dp"
             tools:layout_editor_absoluteX="69dp"/>
    <ScrollView
            android:layout_width="413dp"
            android:layout_height="600dp"
            tools:ignore="MissingConstraints,ScrollViewCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/scrollView2"
            app:layout_constraintTop_toBottomOf="@+id/include"
            app:layout_constraintHorizontal_bias="0.0">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="200px"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Jujutsu Kaisen"
                    android:paddingTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:id="@+id/ivLibro"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:background="@color/black"/>
            <TextView
                    android:id="@+id/tvEditorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Jujutsu Kaisen"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/tvPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Jujutsu Kaisen"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/tvIdioma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Jujutsu Kaisen"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Resumen"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Jujutsu Kaisen es un anime que sigue la historia de Yuji Itadori, un estudiante de secundaria que vive en Sendai junto a su abuelo.
                    Aunque tenga un talento innato para el deporte, evita de todas formas el equipo de pista debido a su aversiÃ³n al atletismo"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSinopsis"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="46dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="619dp"/>


        </LinearLayout>

    </ScrollView>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:background="@color/teal_700"
            android:text="Comprar Libro"
            android:textStyle="bold"
            android:id="@+id/btncomprar"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
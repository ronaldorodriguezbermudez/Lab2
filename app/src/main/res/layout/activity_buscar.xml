<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Buscar">

    <include layout="@layout/tool_bar" android:id="@+id/include"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:gravity="center"
            android:backgroundTint="#103755"
            android:ems="20"
            android:textColor="@color/black"
            android:id="@+id/txtNombreLibro"
            android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="101dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/txtCat"/>
    <Spinner
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/spCategoria"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp"
            android:textColor="@color/black"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:background="#072A45"
            app:layout_constraintTop_toBottomOf="@+id/txtCat"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="55dp"
            app:layout_constraintBottom_toTopOf="@+id/btnBuscaLibro"/>
    <TextView
            android:text="Categoría"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtCat"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreLibro"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" android:layout_marginEnd="177dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/spCategoria"/>
    <Button
            android:text="Buscar Libro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnBuscaLibro"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/spCategoria" android:layout_marginEnd="159dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="158dp"
            app:layout_constraintHorizontal_bias="0.489" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="307dp"/>
    <TextView
            android:text="Título"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:layout_marginEnd="177dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="215dp"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/txtNombreLibro"/>

</androidx.constraintlayout.widget.ConstraintLayout>